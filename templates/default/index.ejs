  <a href="/" class="navbar-brand"><%= title %></a>
  <div class="collapse navbar-collapse target">
    <ul class="navbar-nav mr-auto">
    </ul>
    <ul class="navbar-nav" id="navbar">
    </ul>
  </div>
</nav>

<div class="jumbotron">
  <h1><%= title %></h1>
  <p><%= desc %></p>
</div>

